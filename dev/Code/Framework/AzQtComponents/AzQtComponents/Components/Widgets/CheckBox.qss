QCheckBox
{
    font-size: 12px;
    line-height: 18px;
    color: rgb(204, 204, 204);
}

QCheckBox::indicator
{
    width: 14px;
    height: 14px;
    border: 1px solid white;
    border-radius: 2px;
    margin: 2px;
}

QCheckBox::indicator:PartiallyChecked
{
    image: url(:/stylesheet/img/UI20/combo-tristate.png);
}

QCheckBox::indicator:Unchecked
{
    image: none;
}

QCheckBox::indicator:Unchecked:disabled
{
    border-color: rgb(128, 128, 128);
}

QCheckBox::indicator:Unchecked:focus
{
    width: 16px;
    height: 16px;
    border-width: 2px;
    border-color: rgb(201, 170, 254);
    border-radius: 4px;
    margin: 0px;
}

QCheckBox::indicator:Checked
{
    image: url(:/stylesheet/img/UI20/combo-checked.png);
}

QCheckBox::indicator:Checked:disabled
{
    border-color: rgb(128, 128, 128);
    image: url(:/stylesheet/img/UI20/combo-checked-disabled.png);
}

QCheckBox::indicator:Checked:focus
{
    width: 16px;
    height: 16px;
    border-width: 2px;
    border-color: rgb(201, 170, 254);
    border-radius: 4px;
    image: url(:/stylesheet/img/UI20/combo-checked-focus.png);
    margin: 0px;
}

QCheckBox[class="ToggleSwitch"]::indicator
{
    width: 32px;
    height: 16px;
    border-width: 0px;
    margin: 2px;
}

QCheckBox[class="ToggleSwitch"]::indicator:Unchecked
{
    image: url(:/stylesheet/img/UI20/toggle-unchecked.png);
}

QCheckBox[class="ToggleSwitch"]::indicator:disabled
{
    image: url(:/stylesheet/img/UI20/toggle-unchecked-disabled.png);
}

QCheckBox[class="ToggleSwitch"]::indicator:Unchecked:focus
{
    width: 36px;
    height: 20px;
    border-width: 0px;
    margin: 0px;
    image: url(:/stylesheet/img/UI20/toggle-unchecked-focus.png);
}

QCheckBox[class="ToggleSwitch"]::indicator:Checked
{
    image: url(:/stylesheet/img/UI20/toggle-checked.png);
}

QCheckBox[class="ToggleSwitch"]::indicator:Checked:disabled
{
    image: url(:/stylesheet/img/UI20/toggle-checked-disabled.png);
}

QCheckBox[class="ToggleSwitch"]::indicator:Checked:focus
{
    width: 36px;
    height: 20px;
    border-width: 0px;
    margin: 0px;
    image: url(:/stylesheet/img/UI20/toggle-checked-focus.png);
}
